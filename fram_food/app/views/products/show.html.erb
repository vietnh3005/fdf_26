<% provide :title, @product.name %>
<div class="container">
  <div class="col-md-6">
    <div class="col-md-4">
      <%= default_image @product %>
    </div>
    <div class="col-md-7">
      <div><h3><%= @product.name %></h3></div>
      <div><h4><%= @product.price %></h4></div>
      <div><h5><%= t "product.category" %><%= @product.category.name %></h5></div>
      <div><h5><%= t "product.classify" %><%= @product.classify %></h5></div>
      <div><h5><%= t "product.rate" %><%= @product.rate %></h5></div>
      <div>
        <%= link_to cart_path(@product), remote: true,
          method: "PUT", class: "btn btn-success" do %>
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <%= t "cart.btn_cart" %>
          <% end %>
        </div>
    </div>
  </div>
</div>
<div class="comment">
  <span class="leave"><%= t "views.books.shows.leave" %></span>
    <% if logged_in? %>
      <%= render "comments/comment_form", current_user: current_user %>
    <% end %>
  <%= render "comments/comment_list" %>
</div>
