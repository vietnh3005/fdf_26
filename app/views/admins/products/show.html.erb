<%= provide :title, @product.name %>
<div class="container">
  <div class="col-md-6">
    <div class="col-md-4">
      <%= default_image @product %>
    </div>
    <div class="col-md-7">
      <div><h3><%= @product.name %></h3></div>
      <div><h4><%= @product.price %></h4></div>
      <div><h5><%= t "product.category" %><%= @product.category.name %></h5></div>
      <div><h5><%= t "product.classify" %><%= @product.classify %></h5></div>
      <%= link_to t(".edit"), edit_admins_product_path(), class: "btn btn-primary",
        data: {toggle: "modal", target: "#new"}, remote: true %>
      <%= render "form" %>
      <%= link_to t(".delete"), admins_product_path(@product),
        method: :delete, data: {confirm:t(".confirm")}, class: "btn btn-danger" %>
    </div>
  </div>
</div>
